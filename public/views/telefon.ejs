                -->
            </div>
            <br>
            <br>
            <form  action = "/telefon/:id" method = "post">
                <div class="form-group row">
                    <label for="staticEmail" class="col-sm-2 col-form-label">Model</label>
                    <div class="col-sm-10">
                        <input type="text" readonly  class="form-control" id="staticEmail" value=<%= data.nume_model %>>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="staticEmail" class="col-sm-2 col-form-label">Proprietar</label>
                    <div class="col-sm-10">
                        <input type="text" readonly  class="form-control" id="staticEmail" value=<%= data.prenume%>>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="staticEmail" class="col-sm-2 col-form-label">Memorie Ram</label>
                    <div class="col-sm-10">
                        <input type="text" readonly  class="form-control" id="staticEmail" value=<%= data.memorie_ram %>>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="staticEmail" class="col-sm-2 col-form-label">Memorie</label>
                    <div class="col-sm-10">
                        <input type="text" readonly  class="form-control" id="staticEmail" value=<%= data.memorie %>>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="staticEmail" class="col-sm-2 col-form-label">Ecran</label>
                    <div class="col-sm-10">
                        <input type="text" readonly  class="form-control" id="staticEmail" value=<%= data.marime_ecran %>>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="staticEmail" class="col-sm-2 col-form-label">Camera foto</label>
                    <div class="col-sm-10">
                        <input type="text" readonly  class="form-control" id="staticEmail" value=<%= data.camera %>>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="staticEmail" class="col-sm-2 col-form-label">Procesor </label>
                    <div class="col-sm-10">
                        <input type="text" readonly  class="form-control" id="staticEmail" value=<%= data.model_procesor %>>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="staticEmail" class="col-sm-2 col-form-label">Capacitate baterie </label>
                    <div class="col-sm-10">
                        <input type="text" readonly  class="form-control" id="staticEmail" value=<%= data.capacitate_baterie %>>
                    </div>
                </div>

                <% if(username == data.mail){ %>
                <div class="form-group row">
                  <label for="staticEmail" class="col-sm-2 col-form-label">Pretul telefonului tau</label>
                  <div class="col-sm-10">
                    <input type="text" readonly  class="form-control" id="staticEmail" value=<%= data.pret_initial %>>
                  </div>
                </div> 
                <% } else { %>
                    <div class="form-group row">
                        <label for="staticEmail" class="col-sm-2 col-form-label">Liciteaza</label>
                        <div class="col-sm-10">
                          <input type="text"   class="form-control" id="staticEmail" name = "pret" value=<%= data.pret_initial %>>
                          <input type="hidden" id="custId" name="id_telefon" value = <%= data.id_telefon%>>
                        </div>
                      </div> 
                <%}%>
                <button type="submit" class="btn btn-primary" >Liciteaza !</button>
              </form>
          </div>
    </body>
</html>