                -->
                <form action = "/profile" method = "post">
                  <div class="form-group row">
                    <label for="staticEmail" class="col-sm-2 col-form-label">Nume</label>
                    <div class="col-sm-10">
                      <input type="text" class="form-control" id="staticEmail" name = "nume" value= <%= data.nume %>>
                    </div>
                  </div>

                <div class="form-group row">
                  <label for="staticEmail" class="col-sm-2 col-form-label">Prenume</label>
                  <div class="col-sm-10">
                    <input type="text" class="form-control" id="staticEmail" name = "prenume" value=<%= data.prenume %>>
                  </div>
                </div>

              <div class="form-group row">
                <label for="staticEmail" class="col-sm-2 col-form-label">Mail</label>
                <div class="col-sm-10">
                  <input type="text" class="form-control" id="staticEmail" name = "mail" value=<%= data.mail %>>
                </div>
              </div>

              <div class="form-group row">
                <label for="staticEmail" class="col-sm-2 col-form-label">Telefon</label>
                <div class="col-sm-10">
                  <input type="text" class="form-control" id="staticEmail" name = "nr_telefon" value=<%= data.nr_telefon %>>
                </div>
              </div>
              
              <div class="form-group row">
                <label for="staticEmail" class="col-sm-2 col-form-label">Adresa</label>
                <div class="col-sm-10">
                  <input type="text" class="form-control" id="staticEmail" name = "adresa" value="<%= data.adresa %>">
                </div>
              </div>

              <div class="form-group row">
                <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
                  <div class="col-sm-10">
                    <input type="password" class="form-control" id="inputPassword" name = "parola" value=<%= data.parola %>>
                  </div>
              </div>
              <br>
              <br>
              <button type="submit" class="btn btn-primary" >Updateaza datele tale</button>
              <a href="http://localhost:3000/profile/telefon" class="btn  btn-success">Vezi telefonele tale</a>
              <a href="http://localhost:3000/profile/licitatie" class="btn btn-primary disabled">Vezi telefoanele licitate</a>
              <a href="http://localhost:3000/profile/adauga" class="btn btn-secondary  disabled">Adauga telefon</a>
              </form>
