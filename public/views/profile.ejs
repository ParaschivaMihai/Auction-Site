    <body>
        <%- include('partials/nav'); %>
        <div class="container" id = "content">
            <h1 text-align = "center">
                Welcome to your profile page !
            </h1>
            <br>
            <div id = "info">
              <!--

                <h4>Nume</h4>
                <div class="card">
